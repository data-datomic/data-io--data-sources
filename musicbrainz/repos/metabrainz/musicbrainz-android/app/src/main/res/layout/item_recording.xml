<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/card_view_padding"
    android:layout_marginLeft="@dimen/card_view_padding"
    android:layout_marginTop="@dimen/between_text_padding"
    android:layout_marginEnd="@dimen/card_view_padding"
    android:layout_marginRight="@dimen/card_view_padding"
    android:layout_marginBottom="@dimen/between_text_padding"
    app:cardCornerRadius="@dimen/card_view_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/item_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recording_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="@color/black"
            tools:text="Recording Name" />

        <TextView
            android:id="@+id/recording_disambiguation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Disambiguation" />

        <TextView
            android:id="@+id/recording_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Artist" />

        <TextView
            android:id="@+id/recording_release"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Release" />

    </LinearLayout>
</androidx.cardview.widget.CardView>

